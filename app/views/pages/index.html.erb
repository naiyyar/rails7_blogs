<div class="rounded-md w-full">
	<div class="w-full display-block py-8">
		<div class="float-left">
			<h2 class="text-gray-700 font-semibold tracking-wider">Your Artilces (<%=@articles.count%>)</h2>
		</div>

		<div class="float-right">
			<%= link_to 'New Article', new_article_path, class: 'bg-indigo-600 py-3 px-4 text-white rounded shadow hover:bg-indigo-700 tracking-wider' %>
		</div>
	</div>

	<div class="sm:-ms-8 sm:-px-8 py-4 overflow-x-auto">
		<div class="min-w-full shadow inline-block rounded overflow-hidden">
			<table class="table-auto min-w-full border">
				<thead>
			    <tr>
			      <th class="py-4 text-gray-600 uppercase text-left text-xs px-4 tracking-wider">Title</th>
			      <th class="py-4 text-gray-600 uppercase text-left text-xs px-4 tracking-wider">Created At</th>
			      <th class="py-4 text-gray-600 uppercase text-left text-xs px-4 tracking-wider">Status</th>
			      <th class="py-4 text-gray-600 uppercase text-left text-xs px-4 tracking-wider">Actions</th>
			    </tr>
			  </thead>
			  <tbody>
			  	<%@articles.each do |article| %>
			  		<tr>
				  		<td class="py-4 text-gray-600 text-left text-xs px-4 border"><%=article.title%></td>
				  		<td class="py-4 text-gray-600 text-left text-xs px-4 border"><%=l article.created_at.to_date%></td>
				  		<td class="py-4 text-gray-600 text-left text-xs px-4 border">
				  			<span class="rounded-full <%=status_color(article)%> text-xs py-1 px-3"><%= article.status %></span>
				  		</td>
				  		<td class="py-4 text-gray-600 text-left text-xs px-4 border">
				  			<%= link_to 'Edit', edit_article_path(article), class: 'text-sm bg-blue-400 rounded text-white hover:bg-blue-500 p-2' %>
				  			<%= link_to 'Delete', article_path(article), method: :delete, class: 'text-sm bg-red-400 rounded text-white hover:bg-red-500 p-2 mx-2', data: {confirm: 'Are you sure? '} %>
				  		</td>
			  		</tr>
			  	<%end%>
			  </tbody>
			</table>
		</div>
	</div>
</div>